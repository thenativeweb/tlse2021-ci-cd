{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "noEmit": true,
    "lib": ["esnext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "build",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./build"
  ]
}
